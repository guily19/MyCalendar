<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guillem.mycalendar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewMeeting"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_new_meeting"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewTask"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_new_task"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListTasks"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_list_tasks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HelpActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_help"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OneDayActivity"
            android:label="@string/title_activity_one_day"></activity>
    </application>

</manifest>
